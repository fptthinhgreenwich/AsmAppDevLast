@model List<Job>
<partial name="_Notification" />

<head>
    <style>
        /* Định dạng chung */
        body {
            font-family: 'Roboto', sans-serif;
            background-color: #f9f9fb;
            color: #333;
            margin: 0;
            padding: 0;
        }

        h2 {
            text-align: center;
            color: #264653;
            margin-bottom: 20px;
        }

        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            max-width: 1200px;
            margin: 20px auto;
        }

        .btn-new-job {
            background-color: #2a9d8f;
            color: white;
            border: none;
            border-radius: 5px;
            padding: 10px 20px;
            font-weight: bold;
            position: relative;
            transition: background-color 0.3s ease;
            cursor: pointer;
        }

            .btn-new-job:hover {
                background-color: #21867a;
            }

        thead {
            background-color: #264653;
        }

            thead th {
                color: white;
                padding: 10px;
                text-align: center;
                font-size: 14px;
            }

        tbody tr:nth-child(odd) {
            background-color: #f2f2f2;
        }

        tbody tr:nth-child(even) {
            background-color: #ffffff;
        }

        tbody td {
            padding: 10px;
            text-align: center;
            vertical-align: middle;
        }

        tbody tr:hover {
            background-color: #e9ecef;
            cursor: pointer;
        }

        .btn-outline-primary {
            background-color: #264653;
            color: white;
            padding: 8px 12px;
            border: none;
            border-radius: 5px;
            font-weight: bold;
            transition: background-color 0.3s ease;
        }

            .btn-outline-primary:hover {
                background-color: #1e4e5f;
            }

        .btn-outline-danger {
            background-color: #e63946;
            color: white;
            padding: 8px 12px;
            border: none;
            border-radius: 5px;
            font-weight: bold;
            transition: background-color 0.3s ease;
        }

            .btn-outline-danger:hover {
                background-color: #d62f3c;
            }

        .btn-outline-success {
            background-color: #2a9d8f;
            color: white;
            padding: 8px 12px;
            border: none;
            border-radius: 5px;
            font-weight: bold;
            transition: background-color 0.3s ease;
        }

            .btn-outline-success:hover {
                background-color: #21867a;
            }

        table {
            width: 90%;
            margin: 0 auto;
            border-collapse: collapse;
            background-color: white;
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
        }
    </style>
</head>

<div>
    <h2>List of Job</h2>
    <a asp-controller="Job" asp-action="Create" class="btn btn-primary btn-new-job"><i class="bi bi-person-workspace"></i></a>
</div>

<hr/>

<table class="table table-bordered">
	<thead>
		<tr class="fw-bold">
			<td>Title</td>
			<td>Description</td>
			<td>Required Qualification</td>
			<td>Deadline</td>
			<td>Category</td>
			<td></td>
		</tr>
	</thead>
	<tbody>
		@foreach (var Job in Model)
		{
			<tr>
				<td>@Job.Title</td>
				<td>@Job.Description</td>
				<td>@Job.requiredQualification</td>
				<td>@Job.Deadline</td>
				<td class="fw-bold">@Job.Category.Name</td>
				<td>
					<a asp-controller="Job" asp-action="Edit" asp-route-id="@Job.Id" class="btn btn-outline-primary">Edit</a>
					<a asp-controller="Job" asp-action="Delete" asp-route-id="@Job.Id" class="btn btn-outline-danger">Delete</a>
					<a asp-controller="Job" asp-action="ViewJobApp" asp-route-id="@Job.Id" class="btn btn-outline-success">View Job Application</a>
				</td>
			</tr>
		}
	</tbody>
</table>