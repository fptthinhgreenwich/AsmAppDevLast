@model Category

<head>
    <style>
        /* Định dạng chung */
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
            color: #333;
        }

        h1 {
            text-align: center;
            color: #2a9d8f;
            margin-bottom: 20px;
        }

        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin: 0 auto;
            max-width: 800px;
        }

        .btn-outline-primary {
            border: 2px solid #264653;
            color: #264653;
            font-weight: bold;
            transition: all 0.3s ease;
        }

            .btn-outline-primary:hover {
                background-color: #264653;
                color: white;
            }

        form {
            margin: 30px auto;
            max-width: 800px;
            background-color: #fff;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
        }

        .border {
            border-radius: 10px;
            background-color: #f7f7f9;
            padding: 20px;
        }

        label {
            font-weight: bold;
            color: #264653;
        }

        input[type="text"] {
            border: 1px solid #ccc;
            border-radius: 8px;
            padding: 10px;
            font-size: 14px;
            width: 100%;
            transition: border-color 0.3s ease;
        }

            input[type="text"]:focus {
                border-color: #2a9d8f;
                box-shadow: 0px 0px 5px rgba(42, 157, 143, 0.5);
            }

        .text-danger {
            color: #e63946;
            font-size: 12px;
        }

        .btn-add {
            background-color: #2a9d8f;
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            font-weight: bold;
            transition: background-color 0.3s ease;
            display: block;
            margin: 20px auto;
        }

            .btn-add:hover {
                background-color: #21867a;
            }
    </style>
</head>

<div class="header">
    <h1>Create a category</h1>
    <a asp-controller="Category" asp-action="Index" class="btn btn-outline-primary">Back to List</a>
</div>

<hr />

<form method="post" class="w-75">
    <div class="border p-3 mt-4">
        <div class="mb-3 d-flex justify-content-between align-items-baseline">
            <label asp-for="Name" class="fw-bold">Name:</label>
            <div class="d-grid w-75">
                <input asp-for="Name" type="text" class="form-control">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <button type="submit" class="btn btn-add">Add Category</button>
    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
