@model Category

<head>
    <style>
        /* Định dạng chung */
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
            color: #333;
        }

        h1 {
            text-align: center;
            color: #e63946;
            margin-bottom: 20px;
        }

        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin: 0 auto;
            max-width: 800px;
        }

        .btn-outline-primary {
            border: 2px solid #264653;
            color: #264653;
            font-weight: bold;
            transition: all 0.3s ease;
        }

            .btn-outline-primary:hover {
                background-color: #264653;
                color: white;
            }

        form {
            margin: 30px auto;
            max-width: 800px;
            background-color: #fff;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
        }

        .border {
            border-radius: 10px;
            background-color: #f7f7f9;
            padding: 20px;
        }

        label {
            font-weight: bold;
            color: #264653;
        }

        input[disabled] {
            background-color: #e9ecef;
            border: 1px solid #ccc;
            border-radius: 8px;
            padding: 10px;
            font-size: 14px;
            width: 100%;
            cursor: not-allowed;
        }

        .btn-outline-danger {
            background-color: #e63946;
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            font-weight: bold;
            transition: background-color 0.3s ease;
            display: block;
            margin: 20px auto;
        }

            .btn-outline-danger:hover {
                background-color: #d62f3c;
            }
    </style>
</head>

<div class="header">
    <h1>Delete a Category</h1>
    <a asp-controller="Category" asp-action="Index" class="btn btn-outline-primary">Back to List</a>
</div>

<hr />

<form method="post" class="w-75">
    <div class="border p-3 mt-4">
        <div class="m-2 row">
            <label asp-for="Name" class="col-lg-3 fw-bold">Name:</label>
            <input disabled asp-for="Name" class="col-lg-9">
        </div>
        <div class="m-2 py-3 row">
            <label asp-for="DateCreate" class="col-lg-3 fw-bold">Date Create:</label>
            <input disabled asp-for="DateCreate" type="datetime" class="col-lg-9">
        </div>
        <button type="submit" class="btn btn-outline-danger">Delete</button>
    </div>
</form>
