@model List<Category>
<partial name="_Notification" />

<head>
    <style>
        /* Định dạng chung */
        body {
            font-family: 'Roboto', sans-serif;
            background-color: #f9f9fb;
            color: #333;
            margin: 0;
            padding: 0;
        }

        h1 {
            text-align: center;
            color: #264653;
            margin-bottom: 20px;
        }

        table {
            width: 90%;
            margin: 20px auto;
            border-collapse: collapse;
            background-color: white;
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
        }

        thead {
            background-color: #2a9d8f;
        }

            thead th {
                color: white;
                padding: 10px;
                text-align: center;
                font-size: 14px;
            }

        tbody tr:nth-child(odd) {
            background-color: #f2f2f2;
        }

        tbody tr:nth-child(even) {
            background-color: #ffffff;
        }

        tbody td {
            padding: 10px;
            text-align: center;
            vertical-align: middle;
        }

        tbody tr:hover {
            background-color: #e9ecef;
            cursor: pointer;
        }

        .btn-outline-warning {
            background-color: #f4a261;
            color: white;
            border: none;
            padding: 8px 12px;
            border-radius: 5px;
            font-weight: bold;
            transition: background-color 0.3s ease;
        }

            .btn-outline-warning:hover {
                background-color: #e76f51;
            }

        .btn-outline-primary {
            background-color: #264653;
            color: white;
            border: none;
            padding: 8px 12px;
            border-radius: 5px;
            font-weight: bold;
            transition: background-color 0.3s ease;
        }

            .btn-outline-primary:hover {
                background-color: #1e4e5f;
            }

        .btn-outline-danger {
            background-color: #e63946;
            color: white;
            border: none;
            padding: 8px 12px;
            border-radius: 5px;
            font-weight: bold;
            transition: background-color 0.3s ease;
        }

            .btn-outline-danger:hover {
                background-color: #d62f3c;
            }

        .td-availability {
            display: flex;
            justify-content: center;
            align-items: center;
            gap: 10px;
        }

        form {
            margin: 0;
        }
    </style>
</head>

<h1>List of Categories Waiting for Approval</h1>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Name Category</th>
            <th>Date Create</th>
            <th>Availability</th>
            <th>User Create</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model.Where(c => !c.Availability))

        {
            <tr>
                <td style="font-weight: 600;">@category.Name</td>
                <td>@category.DateCreate.ToString("dd/MM/yyyy HH:mm")</td>
                <td class="td-availability">
                    @if (category.Availability)
                    {
                        <form asp-controller="Category" asp-action="ToggleAvailability" method="post">
                            <input type="hidden" name="id" value="@category.Id" />
                            <button type="submit" class="btn btn-outline-warning">Refuse</button>
                        </form>
                    }
                    else
                    {
                        <form asp-controller="Category" asp-action="ToggleAvailability" method="post">
                            <input type="hidden" name="id" value="@category.Id" />
                            <button type="submit" class="btn btn-outline-primary">Approve</button>
                        </form>
                    }
                </td>
                <td style="font-weight: 700;">@category.ApplicationUser.Name</td>
                <td>
                    <a class="btn btn-outline-danger" asp-controller="Category" asp-action="Delete" asp-route-id="@category.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
