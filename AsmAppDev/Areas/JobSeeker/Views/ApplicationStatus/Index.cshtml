@model List<JobApplication>
<partial name="_Notification" />

<head>
    <style>
        /* Định dạng chung */
        body {
            font-family: Arial, sans-serif;
            background-color: #f9f9fb;
            color: #333;
        }

        h1 {
            text-align: center;
            color: #264653;
            margin-bottom: 20px;
        }

        table {
            width: 90%;
            margin: 0 auto;
            border-collapse: collapse;
            background-color: #fff;
            border-radius: 8px;
            overflow: hidden;
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
        }

        thead {
            background-color: #2a9d8f;
        }

            thead th {
                color: white;
                padding: 15px;
                font-size: 16px;
                text-transform: uppercase;
            }

        tbody tr:nth-child(odd) {
            background-color: #e9ecef;
        }

        tbody tr:nth-child(even) {
            background-color: #ffffff;
        }

        tbody td {
            padding: 12px;
            text-align: center;
        }

        .text-success {
            color: #28a745;
            font-weight: bold;
        }

        .text-warning {
            color: #ff9800;
            font-weight: bold;
        }

        /* Thêm hiệu ứng khi hover vào hàng */
        tbody tr:hover {
            background-color: #f1f1f1;
            cursor: pointer;
        }

        /* Nút quay lại */
        .btn-back {
            display: inline-block;
            margin: 20px auto;
            padding: 10px 20px;
            background-color: #2a9d8f;
            color: white;
            text-decoration: none;
            border-radius: 5px;
            text-align: center;
            font-weight: bold;
            transition: background-color 0.3s ease;
        }

            .btn-back:hover {
                background-color: #21867a;
            }
    </style>
</head>

<div>
    <h1>List of Job Applied</h1>
    <a asp-controller="ApplicationStatus" asp-action="Index" class="btn-back">Back</a>
</div>

<table class="table table-bordered">
    <thead>
        <tr class="fw-bold">
            <th>Job Title</th>
            <th>Job Description</th>
            <th>Day Apply</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var Object in Model)

        {
            <tr>
                <td>@Object.Job.Title</td>
                <td>@Object.Job.Description</td>
                <td>@Object.DayApply</td>
                <td>
                    @if (Object.Status == true)
                    {
                        <span class="text-success">Accepted</span>
                    }
                    else
                    {
                        <span class="text-warning">Pending</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
