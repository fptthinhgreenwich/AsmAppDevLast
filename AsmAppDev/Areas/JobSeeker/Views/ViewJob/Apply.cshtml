@model JobVM

<head>
    <style>
        /* Định dạng chung */
        body {
            font-family: 'Roboto', sans-serif;
            background-color: #f9f9fb;
            color: #333;
            margin: 0;
            padding: 0;
        }

        h2 {
            text-align: center;
            color: #264653;
            margin-bottom: 20px;
        }

        .btn-outline-primary {
            background-color: #2a9d8f;
            color: white;
            border: none;
            border-radius: 5px;
            padding: 10px 20px;
            font-weight: bold;
            transition: background-color 0.3s ease;
        }

            .btn-outline-primary:hover {
                background-color: #21867a;
            }

        form {
            max-width: 800px;
            margin: 20px auto;
            background-color: #fff;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
        }

        .border {
            background-color: #f8f9fa;
            border-radius: 10px;
            padding: 20px;
        }

        label {
            font-weight: bold;
            color: #264653;
        }

        input[disabled] {
            background-color: #e9ecef;
            border: 1px solid #ccc;
            border-radius: 5px;
            padding: 10px;
            font-size: 14px;
            width: 100%;
            cursor: not-allowed;
            color: #6c757d;
        }

        .row {
            margin-bottom: 15px;
        }

        button {
            display: block;
            margin: 20px auto;
            background-color: #2a9d8f;
            color: white;
            border: none;
            border-radius: 5px;
            padding: 10px 20px;
            font-weight: bold;
            transition: background-color 0.3s ease;
        }

            button:hover {
                background-color: #21867a;
            }
    </style>
</head>

<div class="d-flex justify-content-between align-items-center">
    <h2>Apply to Job</h2>
    <a asp-controller="ViewJob" asp-action="Index" class="btn btn-outline-primary">Back to List</a>
</div>

<hr/>

<form class="w-75" method="post">
    <input hidden asp-for="apply.JobId" />
    <div class="border p-3 mt-4">
        <div class="mb-3 row">
            <label asp-for="Job.Title" class="col-lg-3"></label>
            <input asp-for="Job.Title" class="col-lg-9 form-control w-50" disabled>
        </div>
        <div class="mb-3 row">
            <label asp-for="Job.Description" class="col-lg-3"></label>
            <input asp-for="Job.Description" class="col-lg-9 form-control w-50" disabled>
        </div>
        <div class="mb-3 row">
            <label asp-for="Job.requiredQualification" class="col-lg-3">Required Qualification</label>
            <input asp-for="Job.requiredQualification" class="col-lg-9 form-control w-50" disabled>
        </div>
        <div class="mb-3 row">
            <label asp-for="Job.Deadline" class="col-lg-3"></label>
            <input asp-for="Job.Deadline" class="col-lg-9 form-control w-50" disabled>
        </div>
        <button type="submit" class="btn btn-outline-primary">Apply</button>
    </div>
</form>